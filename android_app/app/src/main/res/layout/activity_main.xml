<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 用户和股票信息展示区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="股票信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stockRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 用户选择区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择用户"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSelectUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnQueryUserStocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询用户持仓"
            android:layout_marginBottom="16dp" />

        <!-- 用户持仓展示区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户持仓"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userStocksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 买入股票 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="买入股票"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBuyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBuyStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBuyAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="买入数量"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="买入"
            android:layout_marginBottom="16dp" />

        <!-- 卖出股票 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卖出股票"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSellUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSellStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etSellAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="卖出数量"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卖出"
            android:layout_marginBottom="16dp" />

        <!-- 查询功能区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询功能"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerQueryUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerQueryStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnQueryStockQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询用户持有股票数量"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStockQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnQueryTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询用户总资产"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 销户功能 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销户"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCloseAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销户" />

    </LinearLayout>
</ScrollView>