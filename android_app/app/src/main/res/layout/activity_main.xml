<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 用户和股票信息展示区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

            <!-- 这段XML代码在布局文件中定义了一个RecyclerView组件：
            android:id="@+id/userRecyclerView" - 为这个组件分配了一个唯一ID，可以在代码中引用
            设置了宽度为父容器全宽，高度根据内容自适应 
            1. TextView - 用户信息标题
            2 RecyclerView - 用户信息列表
            
            -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="股票信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stockRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 用户选择区 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择用户"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSelectUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnQueryUserStocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询用户持仓"
            android:layout_marginBottom="16dp" />
            <!-- 这段XML代码定义了一个Android按钮控件，功能是查询用户持仓信息。按钮占据父容器的完整宽度，高度自适应内容，显示文本为"查询用户持仓"，底部留有16dp的外边距 -->
            <!-- Activity中的事件监听

            在 MainActivity 中会为 btnQueryUserStocks 设置点击事件监听器
            通常使用 setOnClickListener 方法处理点击事件
            数据获取流程

            点击事件处理程序会从 spinnerSelectUser 中获取当前选中的用户
            调用后端服务或本地数据库查询该用户的持仓信息
            查询结果会更新到 userStocksRecyclerView 中显示
            UI更新

            userStocksRecyclerView 会根据查询到的持仓数据更新显示内容
            如果有错误或空数据，可能会显示相应的提示信息 -->


            
        <!-- 用户持仓展示区 -->    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户持仓"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userStocksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnQueryTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询用户总资产"
            android:layout_marginBottom="8dp" />

        <!-- <TextView
            android:id="@+id/tvTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" /> -->
        <TextView
            android:id="@+id/tvTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:background="#FFE0E0E0" />
            <!-- android:background="@drawable/total_value_background" /> -->
        
        
        <!-- 买入股票 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="买入股票"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBuyUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBuyStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBuyAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="买入数量"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="买入"
            android:layout_marginBottom="16dp" />

        <!-- 卖出股票 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卖出股票"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSellUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSellStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etSellAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="卖出数量"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卖出"
            android:layout_marginBottom="16dp" />




        <!-- 销户功能 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销户"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCloseAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销户" />

    </LinearLayout>
</ScrollView>